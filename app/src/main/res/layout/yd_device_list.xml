<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ydDeviceListBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/ydDeviceListToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/ydDeviceListLabel"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/ydApLabel1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ydDeviceListBarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/bottomBar_bg_color"
        android:gravity="center_horizontal"
        android:onClick="selectYdDevice"
        android:orientation="vertical"
        android:paddingTop="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ydDeviceAp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ydApLabel2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ydApLabel1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/bottomBar_bg_color"
        android:gravity="center_horizontal"
        android:onClick="selectYdDevice"
        android:orientation="vertical"
        android:paddingTop="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ydDeviceAp2"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/loginPanelLogo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/oum_logo"
        android:paddingTop="60dp"
        android:src="@mipmap/logo" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#f8fcfd"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/user_name"
            android:src="@mipmap/user_name" />

        <EditText
            android:id="@+id/login_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/user_name" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/resetLoginUserName"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/user_reset"
            android:src="@drawable/cancel_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#f8fcfd"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/user_pwd"
            android:src="@mipmap/user_pwd" />

        <EditText
            android:id="@+id/login_user_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/user_pwd"
            android:inputType="textPassword" >
        </EditText>

        <ImageView
            android:id="@+id/resetLoginUserPwd"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/user_reset"
            android:src="@drawable/cancel_button" />
    </LinearLayout>

    <Button
        android:id="@+id/login_user_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#23ac38"
        android:text="@string/user_login"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/user_register_note"
        android:textSize="15sp" />

    <Button
        android:id="@+id/login_user_register"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/share_button_bg"
        android:text="@string/user_register"
        android:textColor="#000000" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingBottom="55dp"
        android:persistentDrawingCache="animation" />

    <RadioGroup
        android:id="@+id/yd_tab_btns"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomBar_height_dimen"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/bottomBar_bg_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <RadioButton
            android:id="@+id/ydMainTab"
            style="@style/tabRadioButtonStyle"
            android:checked="true"
            android:text="@string/yd_main"
            android:drawableTop="@drawable/selector_yd_btn" />

        <RadioButton
            android:id="@+id/ydHistoryTab"
            style="@style/tabRadioButtonStyle"
            android:text="@string/yd_history"
            android:drawableTop="@drawable/selector_ls_btn" />

        <RadioButton
            android:id="@+id/ydDiscoverTab"
            style="@style/tabRadioButtonStyle"
            android:text="@string/menu_item_about"
            android:drawableTop="@drawable/selector_me_btn" />

    </RadioGroup>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/tzHistoryBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tzHistoryToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/tzHistoryTitle"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#585755"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:id="@+id/period_week_layout"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/period_week_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/period_week"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/period_month_layout"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/period_month_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/period_month"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/period_year_layout"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/period_year_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/period_year"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selected_sharp_bg2"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/tongJiEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pedometerTimeLabel"
            android:textColor="#23ac38" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:id="@+id/chart_tz_layout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_tz_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_tz_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_bmi_layout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_bmi_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_bmi_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_zf_layout"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_zf_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_zf_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_nz_layout"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_nz_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_nz_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_jr_layout"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_jr_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_jr_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_sf_layout"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_sf_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_sf_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_qz_layout"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_qz_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_qz_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_gg_layout"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_gg_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_gg_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_jc_layout"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_jc_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_jc_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_none_layout"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/chartLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>